{
  "name": "meetings_minuta",
  "productName": "Meetings Minuta",
  "version": "1.0.0",
  "description": "AI-powered meeting transcription and minutes generation",
  "main": ".vite/build/main.js",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "vite build --config vite.main.config.ts",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "npm run build && electron-forge publish",
    "reset-db": "node src/admin-reset.js",
    "start": "electron-forge start",
    "lint": "eslint --ext .ts,.tsx .",
    "validate-translations": "node scripts/validate-translations.js"
  },
  "keywords": [],
  "author": {
    "name": "Mario Mosca",
    "email": "info@mariomosca.com"
  },
  "license": "MIT",
